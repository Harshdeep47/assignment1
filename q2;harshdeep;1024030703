void remove_duplicates(int arr[], int *n) {
    int i, j, k;
    for (i = 0; i < *n; i++) {
        for (j = i + 1; j < *n; ) {
            if (arr[i] == arr[j]) {
                for (k = j; k < *n - 1; k++)
                    arr[k] = arr[k + 1];
                (*n)--;
            } else {
                j++;
            }
        }
    }
}
